{
  "name": "deploy",
  "private": true,
  "version": "0.0.1",
  "main": "index.js",
  "files": [
    "dist"
  ],
  "author": "Luke.Batchelor <batchelor.luke+git@gmail.com>, Josh Batchelor <>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "build": "yarn clean && yarn build:client && yarn build:server",
    "build:client": "webpack --mode=production",
    "build:server": "tsc -p server.tsconfig.json",
    "prepack": "yarn build",
    "dev": "concurrently --kill-others-on-fail 'yarn dev-server' 'yarn dev-client'",
    "dev:server": "nodemon --watch \"server/**\" --ext \"ts,json\" --exec \"ts-node --project server.tsconfig.json server/index.ts\" | ./node_modules/.bin/pino-pretty",
    "dev:client": "webpack-dev-server",
    "dev:db": "docker-compose -f docker/docker-compose.yml up",
    "lint": "yarn eslint 'src/*.{js,ts,tsx}' --quiet --fix",
    "typecheck": "tsc --noEmit",
    "db:migrations:show": "TS_NODE_FILES=true ts-node ./node_modules/.bin/typeorm migration:show",
    "db:migrations:generate": "TS_NODE_FILES=true ts-node ./node_modules/.bin/typeorm migration:generate -n",
    "db:migrations:run": "TS_NODE_FILES=true ts-node ./node_modules/.bin/typeorm migration:run",
    "release:cut": "yarn version --no-git-tag-version --patch && PACKAGE_VERSION=$(cat package.json | grep version | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git commit -am \"New release: $PACKAGE_VERSION\"",
    "release:pull": "VERSION=`echo $npm_package_version`; curl \"https://github.com/jbatch/deploy/releases/download/v$VERSION/release.tgz\" -sL -o release.tgz; tar -zxvf release.tgz --strip-components=1 package/dist"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "canvas": "^2.8.0",
    "connect-redis": "^5.0.0",
    "cookie": "^0.4.1",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-pino-logger": "^5.0.0",
    "express-session": "^1.17.1",
    "helmet": "^4.1.1",
    "http": "^0.0.1-security",
    "ioredis": "^4.19.1",
    "lint-staged": "^10.2.11",
    "materialize-css": "^1.0.0-rc.2",
    "multer": "^1.4.2",
    "mysql": "^2.18.1",
    "pino": "^6.4.1",
    "prettier": "^2.0.5",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "throttle-debounce": "^3.0.1",
    "typeorm": "^0.2.28",
    "underscore": "^1.11.0",
    "use-state-if-mounted": "^1.0.4",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-redis": "^0.0.14",
    "@types/cookie": "^0.4.0",
    "@types/cors": "^2.8.8",
    "@types/cron": "^1.7.3",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/express-pino-logger": "^4.0.2",
    "@types/express-session": "^1.17.0",
    "@types/helmet": "^4.0.0",
    "@types/ioredis": "^4.17.6",
    "@types/material-ui": "^0.21.7",
    "@types/multer": "^1.4.4",
    "@types/node": "^14.0.26",
    "@types/pino": "^6.3.0",
    "@types/socket.io": "2.1.10",
    "@types/socket.io-client": "^1.4.34",
    "@types/throttle-debounce": "^2.1.0",
    "@types/underscore": "^1.10.24",
    "@types/uuid": "^8.3.0",
    "@types/webpack": "^4.41.21",
    "@types/webpack-dev-server": "^3.11.0",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "copy-webpack-plugin": "^6.0.3",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.4",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.3.0",
    "nodemon": "^2.0.9",
    "pino-pretty": "^4.1.0",
    "ts-loader": "^8.0.1",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^3.9.7",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typecheck && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md,ts,tsx,json}": "prettier --write"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  }
}
